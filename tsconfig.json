{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx" ,
    "baseUrl": "./src",
    "outDir": "./dist/",
    "paths": {
      "@/*": ["src/*"],
      "@pages": ["pages/index"],
      "@components": ["components/index"],
      "@container": ["container/index"],
      "@constants/*": ["constants/*"],
      "@api/*": ["api/*"],
      "@images/*": ["assets/images/*"],
      "@css/*": ["assets/css/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}